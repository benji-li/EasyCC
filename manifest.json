{
    "name": "EasyCC",
    "description": "This extension will...",
    "version": "1.0",
    "manifest_version": 2,

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js":["content.js"]
        }
    ],
    "browser_action":{
        "default_icon":"logo.png",
        "default_popup":"popup.html",
        "default_title":"Extension"  
    },
    "permissions": [
        "desktopCapture",
        "activeTab",
        "storage",
        "tabs",
        "tabCapture"
      ]
}